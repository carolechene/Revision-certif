    <div class="card-flat-infos">
      <h2>Flat #<%= flat.id%></h2>
      <p><%= flat.address %></p>
      <p><%= flat.description %></p>
      <p><strong><%= flat.price %>â‚¬/night</strong></p>
    </div>
